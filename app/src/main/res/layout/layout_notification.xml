<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/image_song_notification"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_circle"
        tools:ignore="ContentDescription"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/text_song_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/text_artist_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_10"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/image_previous_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_previous"
                tools:ignore="ContentDescription"
                />
            <ImageButton
                android:id="@+id/image_pause_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                tools:ignore="ContentDescription"
                />
            <ImageButton
                android:id="@+id/image_play_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                />
            <ImageButton
                android:id="@+id/image_next_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_next"
                tools:ignore="ContentDescription"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
