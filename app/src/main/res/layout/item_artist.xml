<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_artist"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_150"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_artist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@id/image_artist"
            app:layout_constraintLeft_toLeftOf="@id/image_artist"
            app:layout_constraintRight_toRightOf="@id/image_artist"
            app:layout_constraintTop_toTopOf="@id/image_artist"
            app:layout_constraintVertical_bias="0.8" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
